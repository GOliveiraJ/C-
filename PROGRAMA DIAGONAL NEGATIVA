#include <iostream>

using namespace std;

int main()
{
    int N, cont;
    cout << "Qual a ordem da matriz?" ;
    cin >> N;

    int mat [N] [M];

    for(int i = 0, i < N, i++) {
        for(int j = 0, j < N, j++) {
            cout << "Elemento [ " << i << "," << j << "]: ";
        }
    }
    
    cout << "DIAGONAL PRICNCIPAL:" << endl;
    for(int i = 0, i < N, i++) {
        cout << mat[i] [j] << "";
    }

    cout << endl;

    cont = 0
    for(int i = 0, i < N, i++) {
        for(int j = 0, j < N, j++) {
            if(mat[i] [j] < 0) {
                cont++;
            }
        }
    }
    
    cout << "QUANTIDADE DE NEGATIVOS = " << cont << endl;

    return 0;
}
